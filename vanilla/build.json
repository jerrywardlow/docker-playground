{
  "variables": {
    "playbook_vars": "vars/default.yml"
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:trusty",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get install -y python-pip python-dev",
        "pip install ansible"
      ]
    },
    {
      "type": "file",
      "source": "{{user `playbook_vars`}}",
      "destination":  "/tmp/vars.yml"
    },
    {
      "type": "ansible-local",
      "playbook_file": "playbook.yml"
    }
  ]
}
